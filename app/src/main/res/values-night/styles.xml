<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NumberPickerText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:fontFamily">@font/rocknroll_one</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="background">@drawable/bg_button_rounded</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_chevron_left_24</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:text">Back</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NextButton">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:drawableRight">@drawable/ic_baseline_chevron_right_24</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:text">Next</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_rounded</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_color_bottom_button</item>
    </style>
</resources>