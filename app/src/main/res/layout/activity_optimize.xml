<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".DatabaseTestActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"
            android:layout_gravity="top"
            tools:context=".DatabaseTestActivity">


            <TextView
                android:id="@+id/option_factor_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="I want to save"
                android:textSize="25dp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/option_factor_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="Money"
                android:textOff="Time">
            </androidx.appcompat.widget.SwitchCompat>

            <LinearLayout
                android:id="@+id/option_shop_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="horizontal"
                android:gravity="center|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I want to go to "
                    android:textSize="25sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="at most"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioGroup
                    android:id="@+id/option_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/option_shop_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="25sp"/>
                    <RadioButton
                        android:id="@+id/option_shop_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="25sp"/>
                    <RadioButton
                        android:id="@+id/option_shop_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="25sp"/>
                    <RadioButton
                        android:id="@+id/option_shop_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4+"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="25sp"/>
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="stores."
                    android:textSize="25sp"/>

            </LinearLayout>
        </LinearLayout>

    <Button
        android:id="@+id/option_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="Next"
        android:textSize="15dp" />
    <!--how to put this on the bottom without displacing the top...-->
</LinearLayout>
