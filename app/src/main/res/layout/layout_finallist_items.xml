<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="16dp">

    <CheckBox
        android:id="@+id/cb_finallist_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/dark_green"
        android:textSize="20sp"/>
    <ImageView
        android:id="@+id/iv_finallist_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@color/black"
        android:minHeight="80dp"
        android:minWidth="80dp"
        android:contentDescription="@string/image_of_grocery_item" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/tv_finallist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/database_name"
            android:textSize="15sp"
            android:lines="2"
            android:ellipsize="end"
            android:singleLine="false"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_finallist_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/database_price"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_finallist_cate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textSize="17sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_finallist_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="fill_horizontal|center"
        android:gravity="center"
        android:text="@string/database_qty"
        android:textSize="15sp"/>

</LinearLayout>