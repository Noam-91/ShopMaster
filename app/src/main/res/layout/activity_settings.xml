<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".SettingsActivity">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        style="@style/TitleStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="SETTINGS"
        android:fontFamily="@font/open_sans"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context=".SettingsActivity">


        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:text="App Settings"
            android:textColor="@color/purple_700"
            android:fontFamily="@font/oldenburg"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:text="Big Font Mode"
            android:fontFamily="@font/oldenburg"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:text="Dark/Light Mode"
            android:fontFamily="@font/oldenburg"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:text="Update (Version 1.1.2)"
            android:fontFamily="@font/oldenburg"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context=".SettingsActivity">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:text="Communication"
            android:textColor="@color/purple_700"
            android:fontFamily="@font/oldenburg"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:text="Help"
            android:fontFamily="@font/oldenburg"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:text="Report"
            android:fontFamily="@font/oldenburg"
            android:textSize="17sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:gravity="top"
            android:hint="Feedback" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:layout_gravity="end"
            android:text="Send" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:gravity="bottom"
        android:padding="12dp"
        tools:context=".SettingsActivity">

        <!-- TODO: Update blank fragment layout -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:text="Reset App Data"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:text="This will delete all the data from  the app"
            android:layout_gravity="center_horizontal"

            android:fontFamily="@font/oldenburg"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>
